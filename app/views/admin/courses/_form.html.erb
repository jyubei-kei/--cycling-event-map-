<%= form_with model: [ :admin, @event, @course ] do |f| %>
  <% if @course.errors.any? %>
    <ul>
      <% @course.errors.full_messages.each do |m| %>
        <li><%= m %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :name, "コース名" %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :route_url, "コースURL" %><br>
    <%= f.url_field :route_url,placeholder: "https://..." %>
  </div>

  <div>
    <%= f.label :description, "説明" %><br>
    <%= f.text_area :description, row: 4 %>
  </div>

  <%= f.submit %>
<% end %>