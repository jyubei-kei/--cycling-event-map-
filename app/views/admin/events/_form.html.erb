<%= form_with model: [:admin, @event] do |f| %>
  <% if @event.errors.any? %>
    <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :published, "公開する" %>
    <%= f.check_box :published %>
  </div>

  <div>
    <%= f.label :name, "イベント名" %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description, "説明" %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :starts_at, "開始日時" %><br>
    <%= f.datetime_field :starts_at %>
  </div>

  <div>
    <%= f.label :ends_at, "終了日時" %><br>
    <%= f.datetime_field :ends_at %>
  </div>

  <%= f.submit %>
<% end %>